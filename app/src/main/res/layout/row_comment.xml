<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:background="@color/background">

    <ImageView
        android:id="@+id/player_avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/placeholder"/>

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/player_avatar"
        android:layout_marginTop="-4dp"
        android:layout_toEndOf="@id/player_avatar"
        android:layout_toRightOf="@id/player_avatar"
        android:textStyle="bold"
        tools:text="Denshil Yu"/>

    <TextView
        android:id="@+id/comment_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_name"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/player_avatar"
        android:layout_toRightOf="@id/player_avatar"
        android:autoLink="all"
        android:textColorLink="@color/dribbble"
        tools:text="Love this icon, love this app."/>

</RelativeLayout>